<!--/admin view is this index file-->
<a href="/admin/add" class="button success">Add Project</a>
<a href="/" class="button info float-right">Front End</a>
<br />
{{#if projects}}
<table class="table-expand">
    <thead>       
        <tr class="table-expand-row">
            <th width="125">Project</th>
            <th width="125">Date</th>
            <th width="125">Task</th>
            <th>Description of Work</th>
            <th class="text-right" width="150">Hours</th>
            <th class="text-right" width="150">Hrly Rate</th>
            <th class="text-right" width="150">Extended Amount</th>
            <th width="120">Project Notes</th>
            <th></th>
        </tr>
    </thead>
    {{#each projects}}
    <tbody>
        <tr class="table-expand-row" data-open-details>
            <td>{{project_title}}</td>
            <td>{{date}}</td>
            <td>{{task}}</td>
            <td>{{description}}</td>
            <td class="text-right">{{hours}}</td>
            <td class="text-right">${{rate}}</td>
            <td class="text-right">${{ext_amt}}</td>
            <td>uncollapse<span class="expand-icon"></span></td>
            <td>
                <a href="/admin/edit/{{project_id}}" class="button default position-right">Edit</a>
            </td>
        </tr>
        <tr class="table-expand-row-content">
            <td colspan="8" class="table-expand-row-nested">
                <p>{{notes}}</p>
            </td>
        </tr>
    </tbody>
    {{/each}}
</table>
{{else}}
	No Projects
{{/if}}

