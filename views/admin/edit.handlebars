<!--Delete project task per modal confirmation-->
<div id="deleteProject-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are You Sure You Want To Delete This Project Task?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6><strong style="color: red;">WARNING: </strong>Project task cannot be recovered after deletion.</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="delete-project" data-project-id="{{project.project_id}}" data-client-id="{{project.client_id}}">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<a href="/admin/{{project.client_id}}"><i class="fa fa-chevron-left icon pull-left" style="color: #2199e8; font-size: 24px;"></i></a>
<br />
<br />

<h3 style="color: darkslategrey">Edit Project</h3>
<!--displays values in the form-->
<form method="post" action="/admin/edit/{{project.project_id}}" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" class="form-control" name="client_id" value="{{project.client_id}}">
    </div>
    <div class="form-group">
    <label>Project Title</label>
    <input type="text" class="form-control" name="title" placeholder="Title" value="{{project.project_title}}">
    </div>
    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" value="{{project.date}}" name="projectdate"> 
    </div>
    <div class="form-group">
        <label>Task</label>
        <input type="text" class="form-control" name="task" value="{{project.task}}" placeholder="Task">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" name="description" placeholder="Description">{{project.description}}</textarea>
    </div>
    <div class="form-group">
        <label>Hours</label>
        <input type="text" class="form-control" name="hours" placeholder="Hours" value="{{project.hours}}">
    </div>
    <div class="form-group">
        <label>Hourly Rate</label>
        <input type="text" class="form-control" name="rate" value="{{project.rate}}" placeholder="Rate$">
    </div>
    <div class="form-group">
        <label>Notes</label>
        <textarea class="form-control" name="Notes">{{project.notes}}</textarea>
    </div>
    <button type="submit" class="button hollow"><strong>Submit Edit</strong></button>
</form>

<td>
    <a data-toggle="modal" data-target="#deleteProject-modal" class="button alert hollow delete-project">Delete</a>
</td>