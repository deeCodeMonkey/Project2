<!--If there are projects, then loop through them-->

<a href="/company/add" class="button success hollow float-left">
    <i class="fi-plus"></i>
    Client
</a>

{{#if clients}}
{{#each clients}}
<div class="column">
    <a href="/admin/{{client_id}}">
        <img class="thumbnail logo" src="/images/logos/{{logo}}">
    </a>
    <h5 class="text-center" style="color: black;">{{company_name}}</h5>
    <h5 class="text-center" style="color: black;">Account No. {{client_id}}</h5>
    <!--<p class="text-center show"><a href="/admin/{{client_id}}">Timesheet</a></p>-->
    <div class="text-center">
        <a href="/company/delete/{{client_id}}" data-id="{{client_id}}" class="fi-x delete-icon"></a>
        <a href="/company/edit/{{client_id}}" data-id="{{client_id}}" class="fi-page-edit edit-icon"></a>
    </div>
</div>
{{/each}}
{{else}}
<p>No Clients.</p>
{{/if}}


