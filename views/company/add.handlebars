<a class="button secondary" href="/">Go Back</a>

<h1>Add Client</h1>
<h6>{{errors}}</h6>

<form method="post" action="/company/add" 
enctype="multipart/form-data">
<!--enctype attribute used for uploading images-->
    <div class="form-group">
        <div class="form-group">
            <label>Client ID</label>
            <input type="text" class="form-control" name="client_id" placeholder="Client" value="{{id}}">
        </div>
        <label>Company Name</label>
        <input type="text" class="form-control" name="company_name" placeholder="Company Name" value="{{name}}">
    </div>

    <div class="form-group">
        <label>Attachment</label>
        <input type="file" class="form-control" name="logo">
    </div>
    <button type="submit" class="button">Submit</button>
</form>